<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:id="@+id/sclayoutNew"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical" >    <TextView        android:id="@+id/sdatetime"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentTop="true"        android:layout_centerHorizontal="true"        android:text="Date Time"        android:textColor="@color/red"        android:textStyle="bold" />    <ImageButton        android:id="@+id/imgteam1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@+id/sdatetime"        android:src="@drawable/arsenal"        android:layout_marginLeft="20dip"        android:tag="-1"/>    <ImageButton        android:id="@+id/imgteam2"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_alignParentRight="true"        android:layout_alignTop="@+id/imgteam1"        android:layout_marginRight="20dp"        android:src="@drawable/astonvilla"        android:tag="-1"/>    <TextView        android:id="@+id/txtteam1"        android:layout_width="120dp"        android:layout_height="wrap_content"        android:layout_alignParentLeft="true"        android:layout_below="@+id/imgteam1"        android:layout_marginLeft="20dip"        android:text="Team 1"        android:textColor="@color/blue"        android:textStyle="bold" />    <TextView        android:id="@+id/txtteam2"        android:layout_width="120dp"        android:layout_height="wrap_content"        android:layout_alignBaseline="@+id/txtteam1"        android:layout_alignBottom="@+id/txtteam1"        android:layout_alignRight="@+id/imgteam2"        android:layout_alignParentRight="true"        android:layout_marginRight="20dp"        android:text="Team 2"        android:gravity="right"        android:textColor="@color/blue"        android:textStyle="bold" />    <TextView        android:id="@+id/txtstadium"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_below="@+id/txtteam2"        android:layout_centerHorizontal="true"        android:text="Stadium"        android:textColor="@color/green"        android:textStyle="bold" />    <ImageView        android:id="@+id/imgvs"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_above="@+id/txtteam2"        android:layout_alignLeft="@+id/txtteam1"        android:layout_alignRight="@+id/txtteam2"        android:src="@drawable/vs_icon" /></RelativeLayout>