<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/resultlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/rdatetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Date Time"
        android:textColor="@color/red"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/rimgteam1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rdatetime"
        android:src="@drawable/arsenal"
        android:layout_marginLeft="20dip"
        android:tag="-1"/>
    <ImageButton
        android:id="@+id/rimgteam2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/rimgteam1"
        android:layout_marginRight="20dp"
        android:src="@drawable/astonvilla"
        android:tag="-1"/>

    <TextView
        android:id="@+id/rtxtteam1"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rimgteam1"
        android:layout_marginLeft="20dip"
        android:text="Team 1"
        android:textColor="@color/blue"
        android:textStyle="bold" />



    <TextView
        android:id="@+id/rtxtteam2"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/rtxtteam1"
        android:layout_alignBottom="@+id/rtxtteam1"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/rimgteam2"
        android:layout_marginRight="20dp"
        android:text="Team 2"
        android:textColor="@color/blue"
        android:gravity="right"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/rtxtstadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rtxtteam2"
        android:layout_centerHorizontal="true"
        android:text="Stadium"
        android:textColor="@color/green"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rimgteam2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:text="0-0"
        android:textColor="@color/green"
        android:textSize="25dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/score"
        android:layout_centerHorizontal="true"
        android:paddingBottom="25dp"
        android:text="@string/details"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blue"
        android:textColorLink="@color/green"
        android:textSize="@dimen/padding_small"
        android:textStyle="bold" />

</RelativeLayout>